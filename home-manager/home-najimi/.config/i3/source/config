#Press windows + x - check toolbar for next choices
bindsym $mod+X mode "$mode_system"

set $mode_system Sistema (b) bloquear, (c) cerrar-sesión, (s) suspender, (h) hibernar, (r) reiniciar, (a) apagar
mode "$mode_system" {
    bindsym b exec --no-startup-id ~/.config/i3/scripts/i3exit.sh lock, mode "default"
    bindsym c exec --no-startup-id ~/.config/i3/scripts/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/scripts/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/scripts/i3exit.sh reboot, mode "default"
    bindsym a exec --no-startup-id ~/.config/i3/scripts/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#Press windows + shift + w - check toolbar for next choices
bindsym $mod+Shift+w mode "$mode_wallpaper"

set $mode_wallpaper [Wallpaper] : (1) Aleatorio, (2) Default [Ajuste] : (3) Extendido, (4) Centrado, (5) Máximo, (6) Escalado, (7) Repetido
mode "$mode_wallpaper" {
    bindsym 1 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh random
    bindsym 2 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh default
    bindsym 3 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh extended
    bindsym 4 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh center
    bindsym 5 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh max
    bindsym 6 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh scale
    bindsym 7 exec --no-startup-id ~/.config/i3/scripts/wallpaper-desktop.sh repeat

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
